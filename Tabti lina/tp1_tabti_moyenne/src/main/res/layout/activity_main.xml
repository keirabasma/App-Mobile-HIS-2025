
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical" android:padding="16dp">

    <EditText android:id="@+id/note1" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:inputType="numberDecimal"
        android:hint="Note 1"/>

    <EditText android:id="@+id/note2" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:inputType="numberDecimal"
        android:hint="Note 2"/>

    <EditText android:id="@+id/note3" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:inputType="numberDecimal"
        android:hint="Note 3"/>

    <Button android:id="@+id/calculer" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Calculer"/>
</LinearLayout>
